extends layout

block content
  form(action="/users" method="post")
    fieldset 
      legend Sign Up
      <br>
      | 닉네임 : <br>
      input(type="text" name="nickName") 
      <br><br>
      | 이메일 : <br>
      input(type="text" name="email") 
      <br><br>
      | 이름 : <br>
      input(type="text" name="name") 
      <br><br>
      | 핸드폰 : <br>      
      input(type="text" name="phone")
      <br><br>
      |언어 : <br>
      select(name="languageType")
        option(value="KOR") 한국어
        option(value="USA") 영어
        option(value="JPN") 일본
        
      <br><br>
      input(type="submit" value="Submit")

  div#snsCol
    a#facebook(href="#")
      img.sns(src="./img/facebook.png")
    a#google(href="#")
      img.sns(src="./img/google.png")
    a#naver(href="#")
      img.sns(src="./img/naver.png")
    a#kakao(href="#")
      img.sns(src="./img/kakao.png")